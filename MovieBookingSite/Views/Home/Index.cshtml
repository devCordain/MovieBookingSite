@model IEnumerable<MovieBookingSite.Movie>

@{
    ViewData["Title"] = "Home";
}
<div id="carouselControl" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
        @{
            for (int i = 0; i < Model.Count(); i++)
            {
                var base64 = Convert.ToBase64String(Model.ElementAt(i).ImageLarge);
                var imgSrc = string.Format("data:image.jpg;base64, {0}", base64);
                if (i == 0)
                {
                    <div class="carousel-item active">

                        <img class="d-block w-100 h-75 rounded" src="@imgSrc" alt="@Model.ElementAt(i).Name" />
                        <div class="carousel-caption d-block d-md-block bg-dark m-2 p-2 rounded">
                            <h5><i>Star Wars</i> - @Model.ElementAt(i).Name</h5>
                            <p>@Model.ElementAt(i).Description</p>
                            @Html.ActionLink("Buy tickets", "Index", "Showings", new { movieFilter = Model.ElementAt(i).Name })
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100 h-75 rounded" src="@imgSrc" alt="@Model.ElementAt(i).Name" />
                        <div class="carousel-caption d-block bg-dark m-2 p-2 rounded">
                            <h5><i>Star Wars</i> - @Model.ElementAt(i).Name</h5>
                            <p>@Model.ElementAt(i).Description</p>
                            @Html.ActionLink("Buy tickets", "Index", "Showings", new { movieFilter = Model.ElementAt(i).Name })
                        </div>
                    </div>
                }
            }
        }
    </div>
    <br />
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0)
            {
                <li data-target="#carouselControl" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#carouselControl" data-slide-to="@i"></li>
            }
        }
    </ol>
    <a class="carousel-control-prev" href="#carouselControl" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselControl" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
